<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corner_background"
    android:elevation="8dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/record_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="35sp"
        android:text="Mar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/record_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="2021"
        app:layout_constraintStart_toStartOf="@id/record_month"
        app:layout_constraintEnd_toEndOf="@id/record_month"
        app:layout_constraintTop_toBottomOf="@id/record_month"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="Number of items:"
        app:layout_constraintStart_toEndOf="@id/record_month"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/total_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Calories"
        app:layout_constraintStart_toStartOf="@id/item_count"
        app:layout_constraintTop_toBottomOf="@id/item_count"/>

</androidx.constraintlayout.widget.ConstraintLayout>